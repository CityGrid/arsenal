    }
    .ui-resizable {
        position: relative;
    }
    .ui-resizable-handle {
        position:absolute;
        font-size: 0.1px;
        display: block;
        -ms-touch-action: none;
        touch-action: none;
    }
    .ui-resizable-s {
        position:absolute;
        cursor: ns-resize;
        height: 8px;
        width: 100%;
        bottom: 0;
        left: 0;
        background: #f6f6f6 url('/static/img/handle-h.png') no-repeat center center;
        border-top: 1px solid #c0c0c0;
    }
    .ui-resizable-disabled .ui-resizable-handle,
    .ui-resizable-autohide .ui-resizable-handle {
        display: none;
    }
    /* END Resizable */

    /* START New menu */
    #main_menu {
