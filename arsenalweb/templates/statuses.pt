<div id="main_c">
  <div id="panel_c">
    <div class="wrap">
      <div class="resizable resizable1">
        <div class="content_c">
          <div class="content">
            <div id="search_results">

              <div id="columns_menu_c">
                <div id="columns_menu_btn">
                 Columns
                </div>
                <div class="columns_menu">
                    <p>Select the columns you wish to display</p>
                    <ul>
                      <li class="columns_menu_content">
                        <input type="checkbox" id="cm-status_name" name="cm-status_name" checked="checked"/>
                        <label for="cm-status_name">Status Name</label>
                      </li>
                      <li class="columns_menu_content">
                        <input type="checkbox" id="cm-status_id" name="cm-status_id" checked="checked"/>
                        <label for="cm-status_id">Status ID</label>
                      </li>
                      <li class="columns_menu_content">
                        <input type="checkbox" id="cm-description" name="cm-description" checked="checked"/>
                        <label for="cm-description">Description</label>
                      </li>
                    </ul>
                </div>
              </div>
  
              <table id="searchResultsTable" class="tablesorter sar-table">
                <thead>
                  <tr>
                    <th class="sr-status_id"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Status ID</span></div></th>
                    <th class="sr-status_name"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Status Name</span></div></th>
                    <th class="sr-description"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Description</span></div></th>
                    <th class="sr-updated_by"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Updated By</span></div></th>
                    <th class="sr-last_update"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Last Update</span></div></th>
                  </tr>
                </thead>
                <tbody>
                  <tr tal:repeat="item statuses">
                    <td class="sr-status_id" tal:content="item.status_id">0</td>
                    <td class="sr-status_name"><a class="lower_pane" tal:attributes="href '/statuses/{0}'.format(item.status_id)" tal:content="item.name">initializing</a></td>
                    <td class="sr-description" tal:content="item.description">Description.</td>
                    <td tal:content="item.updated_by">2015/04/23 21:02:15</td>
                    <td tal:content="item.updated">2015/04/23 21:02:15</td>
                  </tr>
                </tbody>
              </table>
  
